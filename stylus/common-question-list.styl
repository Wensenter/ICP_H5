@import './common.styl'
.wrap
    background #F4F4F4
    min-height 100vh
    .search-wrap
        font-size 0
        position relative
        .search-box
            background #fff
            width 100%
            height .555rem /* 55.5/100 */
            line-height .555rem /* 55.5/100 */
            border-radius .1rem /* 10/100 */
            border .01rem /* 1/100 */solid rgba(230,230,234,1)
            font-size .26rem /* 26/100 */
            padding 0 .11rem /* 11/100 */0 .22rem /* 22/100 */
            overflow hidden
            position relative
            color #4A4A4A
            .at_search1
                color #666666
                font-size .26rem /* 26/100 */
            input
                position absolute
                padding 0
                top 0
                left .63rem /* 63/100 */
                right .52rem /* 52/100 */   
                width calc(100% - 1.15rem /* 115/100 */)
                height 100%
                outline none
                background transparent
                border 0
                text-indent .1rem /* 10/100 */
                color #005DCC
                &::-webkit-input-placeholder,&::-ms-input-placeholder
                    color #4A4A4A
    .list-question
        margin-top .37rem /* 37/100 */
        .title
            font-size .3rem /* 30/100 */
            color #5184EE
            font-weight 600
            line-height .42rem /* 42/100 */
        .question-tags
            margin-top .29rem /* 29/100 */
            .row
                overflow hidden
                width 100%
                height .68rem /* 68/100 */
                margin-bottom .28rem /* 28/100 */
                a
                    background #fff
                    border .01rem /* 1/100 */solid rgba(81,132,238,1)
                    font-size .28rem /* 28/100 */
                    line-height .4rem /* 40/100 */
                    font-weight bold
                    height .64rem /* 64/100 */
                    width 3.2rem /* 320/100 */
                    line-height .64rem /* 64/100 */
                    text-align center
                    color #333333
                    text-decoration none
                .active
                    color #fff
                    background #5184EE
                    border 0
                .left
                    float left
                .right
                    float right
        .question-list
            padding 0 .2rem /* 20/100 */
            font-size 0
            margin-top .46rem /* 46/100 */
            li
                margin-bottom .3rem /* 30/100 */
                a
                    font-size .26rem /* 26/100 */
                    line-height .37rem /* 37/100 */
                    color #333333
                    text-decoration none