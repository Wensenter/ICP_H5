header
    width 100%
main
    padding .28rem /* 28/100 */ .2rem /* 20/100 */ 0
footer
    width 100%
    ul
        overflow hidden
        width 100%
        border .01rem /* 1/100 */solid #D8D8D8
        background #fff
        font-size 0
        li
            width calc(100% / 3)
            font-size .18rem /* 18/100 */
            height .98rem /* 98/100 */
            display inline-block
            a
                display inline-block
                text-decoration none
                text-align center
                color #666 
                .at
                    font-size .45rem /* 45/100 */
                    display inline-block
                    color #9B9B9B
                    margin-top .2rem /* 20/100 */
                    margin-bottom .04rem /* 4/100 */
            &:nth-child(1)
                text-align left
                padding-left .58rem /* 58/100 */
            &:nth-child(2)
                text-align center
            &:nth-child(3)
                text-align right
                padding-right .44rem /* 44/100 */
        .active
            a
                color #5184EE
                .at 
                    color #5184EE