@import './common.styl'
.wrap
    background #F4F4F4
    min-height 100vh
    .search-wrap
        font-size 0
        position relative
        .search-box
            background #fff
            width calc(100% - .69rem /* 69/100 */)
            height .555rem /* 55.5/100 */
            line-height .555rem /* 55.5/100 */
            border-radius .1rem /* 10/100 */
            border .01rem /* 1/100 */solid rgba(230,230,234,1)
            font-size .26rem /* 26/100 */
            padding 0 .11rem /* 11/100 */0 .22rem /* 22/100 */
            overflow hidden
            position relative
            color #4A4A4A
            .at_search1
                color #666666
                font-size .26rem /* 26/100 */
            input
                position absolute
                padding 0
                top 0
                left .63rem /* 63/100 */
                right .52rem /* 52/100 */   
                width calc(100% - 1.15rem /* 115/100 */)
                height 100%
                outline none
                background transparent
                border 0
                text-indent .1rem /* 10/100 */
            .at_ICP-close-circle-fill
                float right
                color #CCCCCC
                font-size .31rem /* 31/100 */
        .cancle
            font-size .26rem /* 26/100 */
            position absolute
            top 50%
            transform translateY(-50%)
            right 0
            color #9B9B9B
            text-decoration none
    .search-link
        margin-top .53rem /* 53/100 */
        overflow hidden
        font-size 0
        padding 0 .29rem /* 29/100 */
        a
            display inline-block
            font-size .26rem /* 26/100 */
            color #4A4A4A
            text-decoration none
            line-height .38rem /* 38/100 */
        .link-left 
            float left
        .link-right
            float right
    .hot-search
        margin-top .38rem /* 38/100 */
        .title
            font-size .3rem /* 30/100 */
            color #5184EE
            font-weight 600
        .hot-list
            margin-top .28rem /* 28/100 */
            padding 0 .29rem /* 29/100 */
            font-size 0
            li
                height .55rem /* 55/100 */
                a
                    font-size .26rem /* 26/100 */
                    line-height .38rem /* 38/100 */ 
                    text-decoration none
                    display inline-block
                    color #4A4A4A
                    &:last-child
                        margin-left .5rem /* 50/100 */
    .related-record
        margin-top .3rem /* 30/100 */
        .title
            font-size .3rem /* 30/100 */
            color #5184EE
            font-weight 600
        .list-wrap
            font-size 0
            padding 0 .27rem /* 27/100 */
            .list
                list-style disc
                list-style-position inside
                margin-top .39rem /* 39/100 */
                li
                    font-size .26rem /* 26/100 */
                    color #4A4A4A
                    line-height .37rem /* 37/100 */
                    margin-bottom .4rem /* 40/100 */
                    .key
                        color #005DCC
